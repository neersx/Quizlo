[Unit]
Description=Quizlo .NET 8 Web API
After=network.target

[Service]
WorkingDirectory=/var/www/quizlo/api
ExecStart=/usr/bin/dotnet /var/www/quizlo/api/Quizlo.dll
Restart=always
# if your app listens on a non-root port, consider using ambient capabilities:
# AmbientCapabilities=CAP_NET_BIND_SERVICE
# NoNewPrivileges=true

[Install]
WantedBy=multi-user.target